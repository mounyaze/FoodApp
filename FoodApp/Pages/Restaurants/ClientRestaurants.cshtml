<script>
        var cuisines = ["None", "Indian", "Korean", "American", "Moroccan", "Syrian"]
    $(function (){
     $.ajax("/api/Restaurants/",
     {method: "get"})
     .then(function(response){
                    $("#restaurants").dataTable({
                        data: response,
                        columns: [
                            {"data":"name"},
                            {"data":"location"},
                            {"data":"cuisine","render":function(data){
                               return cuisines[data];
                            }}

                        ]
                    });
    
     });
    });
</script>
}